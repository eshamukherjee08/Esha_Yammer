<p id="notice"><%= notice %></p>

<h1>Welcome User Your Page</h1>
<p><%= current_user.email %></p>
<%= image_tag @user.avatar.url(:thumb)%>


<%= form_for(@post, :html=> {:multipart => true }) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field", style="display:inline">
    <h3, style="display:inline"><%= f.label :content, 'Status Update' %>
    <%= f.text_area :content, :rows => 1, :cols => 50 %></h3>
  </div>
  <div class="field">
    <%= f.file_field :post_pic %>
  </div>
  <div class="actions", style="display:inline;float:right;margin-right:850px">
    <%= f.submit %>
  </div>
<% end %>


<% @posts.each do |post| %>
  <% if post.post_pic? %>
    <%= image_tag post.post_pic.url(:thumb)%>
  <% end %>
  <%= sanitize(post.content) %>
  <%= link_to 'View post', post_path(post.id) %><br />
<% end %>

<br /><%= link_to 'My Profile', edit_user_path(@user) %>

<br /><%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %>

