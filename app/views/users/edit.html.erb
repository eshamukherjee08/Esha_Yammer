<h1>Editing user</h1>

<%= form_for(@user, :html=> {:multipart => true }) do |f| %>

<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</div>
<%= image_tag @user.avatar.url(:thumb)%>
<div class="field">
  <%= f.file_field :avatar%>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>

<%= link_to 'Back', user_path(@user) %>